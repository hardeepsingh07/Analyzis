<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hardeep.analyzis.EventFragment"
    android:id="@+id/main_ef_container">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/ef_notification_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp"
        android:gravity="center_vertical|center_horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ef_max_fab"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/up_white"
            app:fabSize="normal"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ef_min_fab" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ef_min_fab"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fabSize="normal"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/down_white"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/ef_data_layout"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:divider="@color/colorDivider"
            android:id="@+id/ef_data_listview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ef_chart_layout"
        android:layout_centerVertical="true"
        android:layout_height="250dp">

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ef_pie_chart">

        </com.github.mikephil.charting.charts.PieChart>

    </RelativeLayout>

</RelativeLayout>
