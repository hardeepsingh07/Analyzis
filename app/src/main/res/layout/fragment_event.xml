<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hardeep.analyzis.EventFragment"
    android:id="@+id/main_ef_container">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/ef_notification_layout"
        android:layout_alignParentTop="true"
        android:layout_height="125dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:divider="@color/colorDivider"
            android:id="@+id/ef_notification_listview">

        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/ef_data_layout"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:divider="@color/colorDivider"
            android:id="@+id/ef_data_listview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ef_chart_layout"
        android:layout_centerVertical="true"
        android:layout_height="250dp">

    </RelativeLayout>

</RelativeLayout>
