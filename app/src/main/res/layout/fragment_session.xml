<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hardeep.analyzis.SessionFragment"
    android:orientation="vertical"
    android:id="@+id/main_sf_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sf_chart_layout"
        android:padding="5dp"
        android:layout_weight="0.64"
        android:layout_height="250dp">

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sf_line_chart"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        </com.github.mikephil.charting.charts.LineChart>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sf_pie_chart"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        </com.github.mikephil.charting.charts.PieChart>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sf_notification_layout"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sf_max_fab"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/up_white"
            app:fabSize="normal"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/sf_min_fab" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sf_min_fab"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fabSize="normal"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/down_white"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/sf_data_layout"
        android:layout_weight="0.4"
        android:layout_height="120dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:dividerHeight="1sp"
            android:layout_alignParentStart="true"
            android:divider="@color/colorDivider"
            android:id="@+id/sf_data_listview" />
    </RelativeLayout>

</LinearLayout>
